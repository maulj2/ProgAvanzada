@model ProyectoFinal.Models.Usuario

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #007bff;
        }

        .profile-info {
            margin-top: 20px;
        }

            .profile-info p {
                font-size: 18px;
                margin-bottom: 5px;
            }

        .profile-image {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bienvenido(a)</h1>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="profile-info">
                <p>Hola: @Model.NombreUsuario</p>

                @if (Model.ImagenPerfil != null)
                {
                    <div class="profile-image">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.ImagenPerfil)" alt="Imagen de Perfil" width="100" height="100" class="rounded-circle" />
                    </div>
                }
                else
                {
                    <p>Sin imagen de perfil</p>
                }

                <a asp-action="ProductoView" asp-controller="Producto" class="btn btn-primary">Ver Productos</a>
            </div>
        }
        else
        {
            <p>No hay un usuario autenticado.</p>
        }
    </div>
</body>
</html>
