@model ProyectoFinal.Models.Producto

<h2>Confirmar Eliminación</h2>
<p>¿Estás seguro de que quieres eliminar el producto <strong>@Model.NombreProducto</strong>?</p>

<form asp-action="ProductoView" asp-controller="Producto" method="post">
    <input type="hidden" asp-for="IdProducto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="_Confirmacion" asp-controller="Producto" class="btn btn-secondary">Cancelar</a>
</form>
