@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* Estilos CSS personalizados */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 100px;
        }

        .card-header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
        }

        .card {
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }

        /* Estilos para el footer */
        footer {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="container">

        <h1 class="text-center mb-5">Video Juegos S.A</h1>

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Iniciar Sesión
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")">¡Regístrate!</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <footer>
        <p>Derechos Reservados - Proyecto Estudiantil</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
